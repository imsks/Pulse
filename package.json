{
  "name": "pulse",
  "version": "0.1.0",
  "description": "General-purpose event ingestion + job queue + worker execution platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --ignore '**/node_modules/**' --ignore '**/dist/**' src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "tsx watch --clear-screen=false --ignore '**/node_modules/**' --ignore '**/dist/**' src/workers/index.ts",
    "type-check": "tsc --noEmit",
    "dev:local": "tsx watch src/index.ts",
    "worker:local": "tsx watch src/workers/index.ts"
  },
  "keywords": [
    "job-queue",
    "worker",
    "redis",
    "bullmq",
    "infrastructure",
    "platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bullmq": "^5.0.0",
    "express": "^4.18.2",
    "ioredis": "^5.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
